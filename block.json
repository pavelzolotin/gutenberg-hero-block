{
	"apiVersion": 2,
	"name": "block-test/hero-block",
	"version": "0.1.0",
	"title": "Hero Block",
	"category": "widgets",
	"icon": "layout",
	"description": "Display hero block.",
	"keywords": ["hero"],
	"supports": {
		"html": false
	},
	"textdomain": "block-test/hero-block",
	"editorScript": "file:./build/index.js",
	"editorStyle": "file:./build/index.css",
	"style": "file:./build/style-index.css",
    "attributes": {
		"title": {
			"type": "string",
			"source": "html",
			"selector": "h1"
		},
		"description": {
			"type": "string",
			"source": "html",
			"selector": "p"
		},
		"id": {
			"type": "number"
		},
		"alt": {
			"type": "string",
			"source": "attribute",
			"selector": "img",
			"attribute": "alt",
			"default": ""
		},
		"url": {
			"type": "string",
			"source": "attribute",
			"selector": "img",
			"attribute": "src"
		}
    }
}
